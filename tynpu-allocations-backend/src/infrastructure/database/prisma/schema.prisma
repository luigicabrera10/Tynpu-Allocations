datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Consultant {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  allocations Allocation[]
}

model Project {
  id          String       @id @default(uuid())
  name        String
  description String?
  allocations Allocation[]
}

model Allocation {
  id           String     @id @default(uuid())
  consultantId String
  projectId    String
  startTime    DateTime
  endTime      DateTime
  consultant   Consultant @relation(fields: [consultantId], references: [id])
  project      Project    @relation(fields: [projectId], references: [id])

  @@index([consultantId, startTime, endTime])
}